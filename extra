////params
> pass after / in url
> we need to define in routing
> use for very small data like (id, name)
////queryparams
> pass after ?
> no need to define
> use for passing multiple values


var a = ["Delhi","Mumbai","Pune","Indore"]
undefined
a.indexOf('Delhi')
0
a.indexOf('Indore')
3
a.indexOf('Amsterdam')
-1
a.indexOf('London')
-1


var a = [5,8,9,2,4,7]
a.filter((data) => {return data>5})
[8, 9, 7]

